{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "files": [
    "index.ts",
    "demos.ts",
    "arc-progress.ts"
  ],
  "include": [
    "src/*",
    "example/**/*",
    "static/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
